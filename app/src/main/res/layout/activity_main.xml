<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:padding="12dp">


    <ImageView
        android:id="@+id/splashlogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/mach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/concert_one"
        android:padding="5dp"
        android:text="MACH"
        android:elevation="10dp"
        android:textColor="@color/colorText"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/splashlogo"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="@+id/splashlogo"
        app:layout_constraintTop_toBottomOf="@+id/splashlogo" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="14dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:columnOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mach"
        app:rowCount="2">


        <android.support.v7.widget.CardView

            android:id="@+id/near_by_card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#ffffff"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onCardClicked"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/near_by"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BC0DCC"
                    android:text="Near By"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extralight"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>




        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/tracking_card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#ffffff"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onCardClicked"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tracking"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BC0DCC"
                    android:text="Tracking"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extralight"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/claim_card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#ffffff"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onCardClicked"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/insurance"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BC0DCC"
                    android:text="Claim"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extralight"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/profile_card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#ffffff"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onCardClicked"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BC0DCC"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extralight"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>




        </android.support.v7.widget.CardView>




    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>